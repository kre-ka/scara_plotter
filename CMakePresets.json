{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_FLAGS": "-DDEBUG"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "inherits": [ "base" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "gcc-windows",
            "hidden": true,
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/gcc.exe"
            }
        },
        {
            "name": "gcc-linux",
            "hidden": true,
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc"
            }
        },
        {
            "name": "gcc-debug-windows",
            "displayName": "GCC Debug Windows",
            "inherits": [ "debug-base", "gcc-windows" ]
        },
        {
            "name": "gcc-release-windows",
            "displayName": "GCC Release Windows",
            "inherits": [ "release-base", "gcc-windows" ]
        },
        {
            "name": "gcc-debug-linux",
            "displayName": "GCC Debug Linux",
            "inherits": [ "debug-base", "gcc-linux" ]
        },
        {
            "name": "gcc-release-linux",
            "displayName": "GCC Release Linux",
            "inherits": [ "release-base", "gcc-linux" ]
        }
    ]
}
